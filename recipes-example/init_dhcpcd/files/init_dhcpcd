### BEGIN INIT INFO
# Provides:          dhcpcd
# Required-Start:    $network $remote_fs
# Required-Stop:     $network $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start dhcpcd at boot time
# Description:       Enable DHCP client daemon
### END INIT INFO

MARKER_FILE="/var/lib/nvram_ssd_written"
SCRIPT_PATH="/mnt/dataSSD/huins_exec/root/testsh/latest/run-all.sh"


case "$1" in
  start)
    /sbin/dhcpcd
    sleep 1
    /usr/bin/debug-app ethernet init
    sleep 1

    # 최초 1회만 수행
    if [ ! -f "$MARKER_FILE" ]; then
        echo "First boot: writing to NVRAM for SSD"
        /usr/bin/debug-app nvram write ssd
        touch "$MARKER_FILE"
    else
        echo "NVRAM write for SSD already done, skipping."
    fi
    sleep 1
    
    /usr/bin/led-init &
    sleep 1
    echo "start" > /tmp/led_cmd && chmod 644 /tmp/led_cmd
    sleep 1
    /usr/bin/debug-app ethernet nego disable
    sleep 1
    /usr/bin/debug-app bootmode check
    sleep 1
    /usr/bin/debug-app bootmode phy start
    sleep 1
    /usr/bin/debug-app stm32 bootcondition
    sleep 1
    /usr/bin/debug-app boot systemlog
    sleep 1
    echo "stop" > /tmp/led_cmd && chmod 644 /tmp/led_cmd
    /usr/bin/debug-app led set status green
    sleep 1
    /usr/bin/debug-app usb cinit
    sleep 1
    /usr/bin/debug-app ethernet setip 2 192.168.10.7
    sleep 1
    /usr/bin/debug-app check all 2
    sleep 1
    /usr/bin/debug-app bootmode complete
    sleep 1
#   sh "$SCRIPT_PATH"
#   /usr/bin/debug-app bootmode startSh "$SCRIPT_PATH" &
    ;;
  stop)
    echo "Stopping dhcpcd"
    killall dhcpcd
    ;;
  restart)
    echo "Restarting dhcpcd"
    killall dhcpcd
    /sbin/dhcpcd
    ;;
  *)
    echo "Usage: /etc/init.d/dhcpcd {start|stop|restart}"
    exit 1
    ;;
esac

exit 0

